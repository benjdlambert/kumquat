<div>
	<h1>Create Test Suite</h1>
	{{#if error}}
	<div class="alert alert-danger" role="alert">{{error.message}}</div>
	{{/if}}
	<div id="panel-information" class="panel panel-default">
	    <div class="panel-heading">Suite Information</div>
	    <div class="panel-body">
		    <form class="form-horizontal" method="POST">
			  <div class="form-group">
			    <label for="suiteTitle" class="col-sm-2 control-label">Title</label>
			    <div class="col-sm-10">
			      <input type="text" class="form-control" name="suiteTitle" id="suiteTitle" placeholder="title">
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="suiteDescription" class="col-sm-2 control-label">Description</label>
			    <div class="col-sm-10">
			      <textarea class="form-control" name="suiteDescription" id="suiteDescription" placeholder="description"></textarea>
			    </div>
			  </div>			  
			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			      <button type="submit" class="btn btn-default">Next</button>
			    </div>
			  </div>
			</form>
	    </div>
	</div>
</div>